<%= form_with(model: [@book, @review], local: true) do |f| %>
  <% if @review.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review:</h4>
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :rating, class: "form-label" %>
    <%= f.select :rating, (1..5).to_a, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "Your Review", class: "form-label" %>
    <%= f.text_area :content, class: "form-control", rows: 4 %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", @book, class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>