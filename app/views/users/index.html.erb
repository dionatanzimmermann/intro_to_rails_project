<div class="container mt-4">
  <h1>Users</h1>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary mb-3' %>

  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Show', user, class: 'btn btn-sm btn-outline-primary' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-secondary' %>
            <%= form_with(url: user_path(user), method: :delete, class: "d-inline") do %>
              <%= button_tag "Delete",
                  type: "submit",
                  class: "btn btn-danger btn-sm",
                  onclick: "return confirm('Are you sure?')" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>