<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1><%= @genre.name %></h1>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @genre.description %></p>

      <h4 class="mt-4">Books in this genre:</h4>
      <% if @genre.books.any? %>
        <ul class="list-group">
          <% @genre.books.each do |book| %>
            <li class="list-group-item">
              <%= link_to book.title, book_path(book), style: "text-decoration: none; color: inherit;" %>
              <span class="text-muted">by <%= book.author %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No books found in this genre.</p>
      <% end %>
    </div>
    <div class="card-footer">
      <%= link_to 'Edit', edit_genre_path(@genre), class: 'btn btn-outline-secondary' %>
      <%= link_to 'Back', genres_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>